</div>

<style>
    .my-class {
        background-color: yellow;
        color: black;
    }

    .my-class2 {
        background-color: purple;
        color: white;
    }


</style>



@code {
    private string cssClass = "";

    private void ToggleStyles()
    {
        if (cssClass == "")
        {
            cssClass = "my-class";
        }
        else
        {
            cssClass = "";
        }
    }
}