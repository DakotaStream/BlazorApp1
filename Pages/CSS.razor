@page "/CSS"
<h3>CSS</h3>

<style>
    :root {
        --my-width: 100px;
    }
    .example {
        background-color: #ccc;
        width: var(--my-width);
    }
</style>

<h1>Change CSS Width with Blazor</h1>
<label>Width</label>
<input @bind-value="@width" />
<p class="example" style="--my-width: @width">My Width is @width</p>
<span><i class="fas fa-info-circle"></i></span>

